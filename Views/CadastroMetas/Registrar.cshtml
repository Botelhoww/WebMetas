@model WeBMetas.Models.CadastroMetasModel

@{
    ViewData["Title"] = "Registrar";
}
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/jquery.mask.min.js" type="text/javascript"></script>
</head>
<body>
    <h1>Registrar Nova Meta</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            
            <form asp-action="Registrar">
                <div class="form-group">
                    <label class="control-label">Nomeie sua meta</label>
                    <input asp-for="NomeMeta" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Quantia necessária para Meta (R$)</label>
                    <input id="TotalMeta" asp-for="Meta" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Quanto você consegue guardar por mês? (R$)</label>
                    <input id="TotalMes" asp-for="QtdGuardarPorMes" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Poste o Link da Imagem da Meta</label>
                    <input asp-for="LinkImagemMeta" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar Meta" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $(document).ready(function () {
        $("#TotalMeta").mask("999.999.990,00", { reverse: true })
        $("#TotalMes").mask("999.999.990,00", { reverse: true })
    })
</script>