@model WeBMetas.Models.CadastroMetasModel

@{
    ViewData["Title"] = "Remover";
}

<h3>Tem certeja que deseja remover essa meta?</h3>
<br />
<main style="flex: 1; display: flex; flex-direction: row;">

    @*//SESSÃO - IMAGEM DA META*@
    <section>
        <div>
            <img src="@Model.LinkImagemMeta"
                 width="700"
                 style="align-self: center;"
                 asp-append-version="true" />
        </div>
    </section>
    <section class="sec-info">
        <div class="info-meta">
            <div>
                <h1 class="meta-titulo text-uppercase">
                    @Html.DisplayFor(model => model.NomeMeta)
                </h1>
            </div>

            <div style="padding-top: 15px">
                <h1 class="meta-valor">
                    <a>Meta R$@Html.DisplayFor(model => model.Meta)</a>
                </h1>
            </div>

            <br />
            <p>Valor Proposto para Guardar por Mês: </p>
            <p class="meta-valor1">R$@Model.QtdGuardarPorMes</p>

            <p>Situação atual: </p>
            <p class="meta-valor1">Não alcançada</p>
        </div>

        <form asp-action="Remover">
            <input type="submit" value="Confirmar" class="btn btn-danger" /> |
            <a class="btn btn-outline-secondary" href="javascript:history.back()">Cancelar</a>
        </form>
    </section>
</main>
<style>
    .info-meta p {
        font-size: 18px;
    }

    .meta-titulo {
        font-size: 24px;
        font-weight: 700;
        color: #646464;
    }

    .meta-valor {
        font-size: 30px !important;
        font-weight: 700;
        display: block;
        padding-top: 23px;
    }

    .meta-valor1 {
        font-size: 30px !important;
        font-weight: 700;
        display: block;
    }

    .sec-info {
        flex: 1;
        text-align-last: center;
        align-self: center;
    }
</style>